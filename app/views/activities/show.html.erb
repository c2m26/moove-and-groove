<div id="vh" class="d-flex justify-content-center flex-column">

    <div class="d-flex align-items-center justify-content-center flex-fill">
        <div class="card shadow p-3 bg-white rounded mx-2">
        
            <div class= "card-body">
                <h2 class="card-title text-primary">Activity details</h2>
            
                <div class="mt-4">
                    <div class="row pt-2">
                        <div class="col-xl-5 col-lg-5 col-md-5 col-sm-5 col-5"><strong>Activity:</strong></div>
                        <div class="col-xl-7 col-lg-7 col-md-7 col-sm-7 col-7"><%=@activity.name%></div>
                    </div>
                    
                    <div class="row pt-2">
                        <div class="col-xl-5 col-lg-5 col-md-5 col-sm-5 col-5"><strong>Date:</strong></div>
                        <div class="col-xl-7 col-lg-7 col-md-7 col-sm-7 col-7"><%=@activity.date%></div>
                    </div>

                    <div class="row pt-2">
                        <div class="col-xl-5 col-lg-5 col-md-5 col-sm-5 col-5"><strong>Duration:</strong></div>
                        <div class="col-xl-7 col-lg-7 col-md-7 col-sm-7 col-7"><%= '%02d' % @activity.duration.hour %>:<%= '%02d' % @activity.duration.min %></div>
                    </div>
                </div>
            
                <div class="mt-4">
                    <%= link_to 'Edit', edit_activity_path, class: "btn btn-primary mr-2" %>
                    <%= link_to 'Back', activities_path, class: "btn btn-primary" %>
                </div>

            </div>
        </div>
    </div>

    <div id="footer_bottom"><%= render '/site/footer'%></div>

 </div>
