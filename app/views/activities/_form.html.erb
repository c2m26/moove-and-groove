<div class="container">
  <div class="card col-xl-10 col-lg-11 col-md-10 col-sm-10 col-10 mt-5 mx-auto shadow p-3 mb-5 bg-white rounded">
    <div class="card-body mx-auto">
      <%= form_with model: @activity, local: true do |f| %>
        
          <% if @activity.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@activity.errors.count, "error") %> prohibited
                this article from being saved:
              </h2>
              <ul>
                <% @activity.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        
        <h2 class="card-title text-primary">Activity</h2>

        <div class="form-group">
          <div class="radio-button-selection d-flex flex-wrap justify-content-center">
            <div id="activity" class="m-2">
              <%= f.radio_button(:name, 'swimming')%>
              <%= f.label(:name_swimming, image_tag("swimming.png", alt: "swimming"), class: "m-2") %>
            </div>

            <div  id="activity" class="m-2">
              <%= f.radio_button(:name, 'running')%>
              <%= f.label(:name_running, image_tag("running.png", alt: "running"), class: "m-2") %>
            </div>

            <div id="activity" class="m-2">
              <%= f.radio_button(:name, 'badminton')%>
              <%= f.label(:name_badminton, image_tag("badminton.png", alt: "badminton"), class: "m-2") %>
            </div>

            <div id="activity" class="m-2">
              <%= f.radio_button(:name, 'cycling')%>
              <%= f.label(:name_cycling, image_tag("cycling.png", alt: "cycling"), class: "m-2") %>
            </div>

            <div id="activity" class="m-2">
              <%= f.radio_button(:name, 'eliptical')%>
              <%= f.label(:name_eliptical, image_tag("eliptical.png", alt: "eliptical"), class: "m-2") %>
            </div>

            <div id="activity" class="m-2">
              <%= f.radio_button(:name, 'mountain_biking')%>
              <%= f.label(:name_mountain_biking, image_tag("cycling.png", alt: "mountain_biking"), class: "m-2") %>
            </div>

            <div id="activity" class="m-2">
              <%= f.radio_button(:name, 'rowing')%>
              <%= f.label(:name_rowing, image_tag("rowing.png", alt: "rowing"), class: "m-2") %>
            </div>

            <div id="activity" class="m-2">
              <%= f.radio_button(:name, 'hiking')%>
              <%= f.label(:name_hiking, image_tag("hiking.png", alt: "hiking"), class: "m-2") %>
            </div>

            <div id="activity" class="m-2">
              <%= f.radio_button(:name, 'skiing')%>
              <%= f.label(:name_skiing, image_tag("skiing.png", alt: "skiing"), class: "m-2") %>
            </div>

            <div id="activity" class="m-2">
              <%= f.radio_button(:name, 'snowboarding')%>
              <%= f.label(:name_snowboarding, image_tag("snowboarding.png", alt: "snowboarding"), class: "m-2") %>
            </div>
            

          </div>
        </div>

        <div class="row">
        <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
          <%= f.label Date %>
          <%= f.date_field(:date, {class: "form-control"} ) %>
        </div>

        <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
          <%= f.label :duration %>
          <%= f.time_field(:duration, {class: "form-control"} ) %>
        </div>
        </div>

        <div class="actions" >
          <%= f.submit class: "btn btn-primary mr-2"%>
          <%= link_to 'Back', activities_path, class: "btn btn-primary" %>
        </div>
        
        <% end %>
    </div>
    

  </div>
</div>

