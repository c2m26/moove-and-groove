<h1>List of activities</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Date</th>
    <th>Duration</th>
    <th colspan="3"></th>
  </tr>
 
  <% @activities.each do |activity| %>
    <tr>
      <td><%= activity.title %></td>
      <td><%= activity.text %></td>
      <td><%= link_to 'Show', activity_path(activity) %></td>
      <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
       <td><%= link_to 'Destroy', activity_path(activity),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>