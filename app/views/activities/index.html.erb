<div id="vh" class="d-flex justify-content-center flex-column">

  <div class="d-flex justify-content-center align-items-center flex-fill">
    
      <div class="card shadow p-3 bg-white rounded mx-2">
          <div class= "card-body">
      
          <h2 class="card-title text-primary"> Your activities</h2>
      
          
            <table class=" table-responsive table table-hover">
              <thead>
              <tr class="text-center">
                <th>Type</th>
                <th>Date</th>
                <th>Duration</th>
                <th colspan="3" >Action</th>
              </tr>
              </thead>
              
              <tbody>
              <% @activities.each do |activity| %>
                <% if activity.user == current_user%>
                  <tr >
                    <td class="align-middle"><%=image_tag(activity.name)%></td>
                    <td class="align-middle"><%= activity.date %></td>
                    <td class="align-middle"><%= activity.duration %></td>
                    <td class="align-middle"><%= link_to 'Show', activity_path(activity), class: "btn btn-primary btn-sm" %></td>
                    <td class="align-middle"><%= link_to 'Edit', edit_activity_path(activity), class: "btn btn-primary btn-sm" %></td>
                    <td class="align-middle"><%= link_to 'Delete', activity_path(activity), class: "btn btn-danger btn-sm",
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <%end%>
              <% end %>
              </tbody>
            </table>
          
          <div class="mt-4">
            <%= link_to 'New', new_activity_path, class: "btn btn-primary mr-2" %>
            <%= link_to 'Back', root_path, class: "btn btn-primary" %>
          </div>

        </div>
      
          
      </div>
    
  </div>

  <div id="footer_bottom"><%= render '/site/footer'%></div>

 </div>