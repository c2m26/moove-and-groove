            <% if user_signed_in?%>
            <a href=<%=new_activity_path%> class="btn btn-secondary btn-lg m-2">New Activity</a>
            <%= link_to 'Activity Tracker', activities_path, class: "btn btn-secondary btn-lg m-2" %>
